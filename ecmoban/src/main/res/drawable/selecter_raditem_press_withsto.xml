<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#88cccccc" />
            <corners
                android:radius="8dp" />
            <stroke
                android:color="@color/line_long_dark"
                android:width="0.6dp"/>
        </shape>
    </item>

    <!-- normal -->
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners
                android:radius="8dp" />
            <stroke
                android:color="@color/line_long_dark"
                android:width="0.6dp"/>
        </shape>
    </item>

</selector>