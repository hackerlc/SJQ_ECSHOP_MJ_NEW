<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/background">
        <shape>
            <stroke android:width="1dp"
                    android:color="@color/main_color_e7e7e7"/>
            <gradient
                android:startColor="@color/main_color_f6f6f6"
                android:centerColor="@color/main_color_f6f6f6"
                android:endColor="@color/main_color_f6f6f6"/>
        </shape>
    </item>

    <item android:id="@+id/secondaryProgress">
        <clip>
            <shape>
                <stroke android:width="1dp"
                        android:color="@color/main_color_db0f61"/>
                <gradient
                    android:startColor="@color/title_bg_color"
                    android:centerColor="@color/title_bg_color"
                    android:endColor="@color/title_bg_color"/>
            </shape>
        </clip>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <shape>
                <stroke android:width="1dp"
                        android:color="@color/main_color_db0f61"/>
                <gradient
                    android:startColor="@color/title_bg_color"
                    android:centerColor="@color/title_bg_color"
                    android:endColor="@color/title_bg_color"/>
            </shape>
        </clip>
    </item>

</layer-list>

