<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <View
        android:id="@+id/trade_item_top"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:id="@+id/order_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:background="@drawable/selecter_newitem_press"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/trade_body_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/trade_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/my_black"
                android:textSize="@dimen/list_item_mid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px20"
                android:layout_marginTop="@dimen/px20"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/trade_body_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/my_red"
                    android:textSize="@dimen/list_item_mid"/>
                <TextView
                    android:id="@+id/trade_body_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/my_dark"
                    android:textSize="@dimen/list_item_mid"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_apply_service"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px15"
                android:layout_marginTop="@dimen/px15"
                android:paddingRight="@dimen/px15"
                android:layout_gravity="end"
                android:text="申请售后"
                android:background="@drawable/selector_white_stroke_corner"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/trade_item_buttom"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"/>

</LinearLayout>
