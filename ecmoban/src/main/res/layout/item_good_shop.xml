<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_shop_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/iv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_shop_img"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        tools:text="商铺名称"/>

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_item_good_shop_b"
        android:gravity="center"
        android:text="关注"/>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_shop_img"
        android:layout_marginTop="8dp"
        android:background="@color/main_color_e7e7e7"/>
    <LinearLayout
        android:id="@+id/ll_img_div"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_below="@id/v_line"
        android:layout_marginTop="12dp">
        <com.ecjia.widgets.PriceImageView
            android:id="@+id/iv_goods_img_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            app:priceStr="￥123.00"
            app:priceStrColor="@android:color/white"
            app:priceStrSize="14sp"
            app:divWidth="70dp"
            app:divColor="@color/main_color_7bf82d7c"
            android:visibility="invisible"/>

        <com.ecjia.widgets.PriceImageView
            android:id="@+id/iv_goods_img_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            app:priceStr="￥123.00"
            app:priceStrColor="@android:color/white"
            app:priceStrSize="14sp"
            app:divWidth="70dp"
            app:divColor="@color/main_color_7bf82d7c"
            android:visibility="invisible"/>

        <com.ecjia.widgets.PriceImageView
            android:id="@+id/iv_goods_img_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            app:priceStr="￥123.00"
            app:priceStrColor="@android:color/white"
            app:priceStrSize="14sp"
            app:divWidth="70dp"
            app:divColor="@color/main_color_7bf82d7c"
            android:visibility="invisible"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_img_div"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/main_font_color_9"
        tools:text="那么啊实打实的"/>

    <TextView
        android:id="@+id/tv_new_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="上新1000款"
        android:layout_below="@+id/iv_shop_name"
        android:layout_toRightOf="@+id/iv_shop_img"
        android:layout_toEndOf="@+id/iv_shop_img"/>
</RelativeLayout>