<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/new_good_distance"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#000000"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searcher_new_header_bg"/>

        <ImageView
            android:id="@+id/remark_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/header_back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/remark_remark"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize"/>

        <Button
            android:id="@+id/remark_save"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:text="@string/bill_save"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_right_textsize"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="@string/remark_content"
            android:textSize="@dimen/list_item_title"/>

        <EditText
            android:id="@+id/remark_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shap_remark_edit"
            android:gravity="top"
            android:hint="@string/remark_input"
            android:maxLength="255"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:textColorHint="#66999999"
            android:textSize="@dimen/list_item_title"/>
    </LinearLayout>

</LinearLayout>