<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_new_distance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/shape_push_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_margin="1dp"
            android:background="#ea5574"
            android:orientation="vertical">

            <TextView
                android:id="@+id/red_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="红包" />

            <TextView
                android:id="@+id/red_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="21dp"
                android:text="红包金额" />

            <TextView
                android:id="@+id/red_goodsfee"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#999999"
                android:layout_marginTop="8dp"
                android:text="使用期限" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/red_starttime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#999999"
                android:gravity="center"
                android:text="20150211" />

            <TextView
                android:id="@+id/red_endtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#999999"
                android:text="20150311"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/red_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:text="状态" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>