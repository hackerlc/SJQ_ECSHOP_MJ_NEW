<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="#dddddd" />

    <LinearLayout
        android:id="@+id/home_bigimg_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_new_distance"
            android:visibility="gone"
            android:background="@drawable/new_good_distance" />

        <ImageView
            android:id="@+id/home_bigimg"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/smallimg_parentitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_smallimg_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/adsense_item1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adsense_text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:layout_weight="1" />

                <com.ecjia.widgets.imagecircle.CircleImage
                    android:id="@+id/home_smallimg1"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dddddd" />

            <LinearLayout
                android:id="@+id/adsense_item2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adsense_text2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:layout_weight="1" />

                <com.ecjia.widgets.imagecircle.CircleImage
                    android:id="@+id/home_smallimg2"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#dddddd" />

        <LinearLayout
            android:id="@+id/home_smallimg_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/adsense_item3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adsense_text3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:layout_weight="1" />

                <com.ecjia.widgets.imagecircle.CircleImage
                    android:id="@+id/home_smallimg3"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dddddd" />

            <LinearLayout
                android:id="@+id/adsense_item4"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adsense_text4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:layout_weight="1" />

                <com.ecjia.widgets.imagecircle.CircleImage
                    android:id="@+id/home_smallimg4"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>