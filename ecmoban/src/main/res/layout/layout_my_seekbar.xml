<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_price1"
            android:layout_width="@dimen/px100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试"
            android:textColor="#aaffffff"
            android:textSize="@dimen/texte_size_16"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_goods_price2"
            android:layout_width="@dimen/px100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试"
            android:textColor="#aaffffff"
            android:textSize="@dimen/texte_size_16"/>
        <View
            android:id="@+id/view_zan1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_goods_price3"
            android:layout_width="@dimen/px100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#aaffffff"
            android:text="测试"
            android:textSize="@dimen/texte_size_16"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px40"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_price1"
                android:layout_width="@dimen/px20"
                android:layout_height="@dimen/px20"
                android:clickable="false"
                android:background="@drawable/selecter_group_checkboxbg"
                android:button="@null"/>

            <ProgressBar
                android:id="@+id/progress_1"
                style="@style/GroupInfoSnatchWholesaleProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <CheckBox
                android:id="@+id/cb_price2"
                android:layout_width="@dimen/px20"
                android:layout_height="@dimen/px20"
                android:clickable="false"
                android:background="@drawable/selecter_group_checkboxbg"
                android:button="@null"/>
            <ProgressBar
                android:id="@+id/progress_2"
                style="@style/GroupInfoSnatchWholesaleProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


            <CheckBox
                android:id="@+id/cb_price3"
                android:layout_width="@dimen/px20"
                android:layout_height="@dimen/px20"
                android:clickable="false"
                android:background="@drawable/selecter_group_checkboxbg"
                android:button="@null"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_price1_content"
            android:layout_width="@dimen/px100"
            android:layout_height="wrap_content"
            android:text="测试"
            android:gravity="center"
            android:textColor="#aaffffff"
            android:textSize="@dimen/texte_size_14"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_goods_price2_content"
            android:layout_width="@dimen/px100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#aaffffff"
            android:text="测试"
            android:textSize="@dimen/texte_size_14"/>
        <View
            android:id="@+id/view_zan2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_goods_price3_content"
            android:layout_width="@dimen/px100"
            android:layout_height="wrap_content"
            android:textColor="#aaffffff"
            android:gravity="center"
            android:text="测试"
            android:textSize="@dimen/texte_size_14"/>


    </LinearLayout>

</LinearLayout>