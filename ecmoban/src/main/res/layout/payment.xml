<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_good_distance"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <LinearLayout
        android:id="@+id/payment_onlineitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shipping_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#999999"
            android:text="@string/payment_Online" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line_long_dark" />

        <ListView
            android:id="@+id/payment_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:dividerHeight="0.1dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"></ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_uplineitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textColor="#999999"
            android:text="@string/payment_Offline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line_long_dark" />

        <ListView
            android:id="@+id/payment_list1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:dividerHeight="0.1dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"></ListView>
    </LinearLayout>
</LinearLayout>