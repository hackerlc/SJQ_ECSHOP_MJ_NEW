<?xml version="1.0" encoding="utf-8"?>
<com.ecjia.view.adapter.adaptercell.MyHotCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/newgood_item_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecter_raditem_press_withsto"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="181.2dp"
                android:gravity="center">

                <com.ecjia.widgets.SelectableRoundedImageView
                    android:id="@+id/new_gooditem_photo1"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_margin="0.6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image"
                    app:sriv_border_color="#ffffff"
                    app:sriv_left_top_corner_radius="8dp"
                    app:sriv_right_top_corner_radius="8dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/promote_new_tag"/>
            </FrameLayout>

            <TextView
                android:id="@+id/new_good_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_share"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/new_shop_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/my_red"
                android:text="¥0.00"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newgood_item_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selecter_raditem_press_withsto"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="181.2dp"
                android:gravity="center">

                <com.ecjia.widgets.SelectableRoundedImageView
                    android:id="@+id/new_gooditem_photo2"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_margin="0.6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image"
                    app:sriv_border_color="#ffffff"
                    app:sriv_left_top_corner_radius="8dp"
                    app:sriv_right_top_corner_radius="8dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/promote_new_tag"/>
            </FrameLayout>

            <TextView
                android:id="@+id/new_good_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_share"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/new_shop_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/my_red"
                android:text="¥0.00"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
</com.ecjia.view.adapter.adaptercell.MyHotCell>