<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px75"
        android:gravity="center"
        android:text="店铺优惠券"
        android:textColor="@color/_999999"
        android:textSize="@dimen/texte_size_18"/>
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/px1"
          android:background="@color/line_long_dark"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px300"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:minHeight="@dimen/px280"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ly_redpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView android:layout_width="match_parent"
                      android:layout_height="@dimen/px80"
                      android:gravity="center_vertical"
                      android:text="红包口令密码"
                      android:textColor="@color/_333333"
                      android:textSize="@dimen/texte_size_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px70"
                android:background="@color/line_e6"
                android:orientation="horizontal">

                <EditText android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_margin="@dimen/px1"
                          android:layout_weight="1"
                          android:background="@color/white"
                          android:hint="请输入红包口令密码"
                          android:textColor="@color/title_bgcolor"
                          android:textColorHint="@color/my_dark"
                          android:textSize="@dimen/texte_size_16"/>
                <TextView android:layout_width="@dimen/px150"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:text="验证"
                          android:textColor="@color/_333333"
                          android:textSize="@dimen/texte_size_16"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:background="@color/title_bg_color"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/texte_size_18"/>

</LinearLayout>