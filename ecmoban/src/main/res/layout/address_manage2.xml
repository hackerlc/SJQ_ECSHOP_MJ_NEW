<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_good_distance"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searcher_new_header_bg" />

        <ImageView
            android:id="@+id/address_manage2_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/header_back_arrow" />

        <TextView
            android:id="@+id/address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/manage_edit_address"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize" />

        <Button
            android:id="@+id/address_manage2_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:text="@string/bill_save"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_right_textsize"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_new_distance"
        android:background="@drawable/new_good_distance" />
    <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_new_distance"
            android:background="@drawable/new_good_distance" />
    -->
    <LinearLayout
        android:id="@+id/edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="fill_parent"
            android:overScrollMode="never"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_nothing_bg"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/address_manage2_name"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/manage2_name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/address_manage2_phoneNum"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/manage2_phone"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/address_manage2_telNum"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/manage2_tel"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title"
                        android:visibility="gone" />


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/address_manage2_email"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/manage2_email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title"
                        android:visibility="visible" />


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/address_manage2_zipCode"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/address_zip"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/line_long_dark" />

                    <LinearLayout
                        android:id="@+id/address_manage2_area"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/address_manage2_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="@string/address_area"
                            android:textColor="#000000"
                            android:textSize="@dimen/list_item_title" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/header_right_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/address_manage2_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/manage2_address"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_new_distance"
                    android:background="@drawable/new_good_distance" />

                <LinearLayout
                    android:id="@+id/setdefault_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_nothing_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark" />


                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="@string/manage2_set"
                            android:textColor="#FF6633"
                            android:layout_gravity="center_vertical"
                            android:textSize="16dp" />

                        <CheckBox
                            android:id="@+id/address_manage2_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:checked="false"
                            android:background="@drawable/selector_addresssetdefault"
                            android:layout_gravity="center_vertical|right"
                            android:button="@null" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_new_distance"
                        android:background="@drawable/new_good_distance" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_good_distance"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/address_submit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/selector_login_button"
                        android:minWidth="100dp"
                        android:text="@string/save"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/title_textsize" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/insert_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"

        >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_nothing_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/add_address_name"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/address_consignee"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/add_address_telNum"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/address_tel"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title"
                        android:visibility="gone" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark"
                        android:visibility="gone" />


                    <EditText
                        android:id="@+id/add_address_phoneNum"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/manage2_phone"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/add_address_email"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/address_email"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/add_address_zipCode"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/address_zip"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_long_dark" />

                    <LinearLayout
                        android:id="@+id/add_address_area"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/add_address_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="@string/address_area"
                            android:textColor="#000000"
                            android:textSize="@dimen/list_item_title" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/header_right_arrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/line_long_dark" />

                    <EditText
                        android:id="@+id/add_address_detail"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:hint="@string/address_address"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="@dimen/list_item_title" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_new_distance"
                        android:background="@drawable/new_good_distance" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/line_long_dark" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_good_distance"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/address_add_submit"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/selector_login_button"
                            android:minWidth="100dp"
                            android:text="@string/save"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/title_textsize" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>