<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/searcher_new_header_bg"/>

        <ImageView
            android:id="@+id/top_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/header_back_arrow"/>

        <!--取消,编辑，完成，保存等按钮-->
        <TextView
            android:id="@+id/top_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="@string/top_clean"
            android:textColor="#ffffff"
            android:textSize="@dimen/list_item_title"
            android:visibility="gone"/>

        <com.ecjia.widgets.imagecircle.CircleImage
            android:id="@+id/top_view_list"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/profile_no_avarta_icon"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/top_view_text"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize"/>

        <ImageView
            android:id="@+id/top_view_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@drawable/gooddetail_showmore"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/top_view_zxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:src="@drawable/top_view_zxing"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/top_view_removebrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="@string/top_clean"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_right_textsize"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/top_right_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:text="@string/address_save"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_right_textsize"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/top_right_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/top_right_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="@string/topview_message"
                android:textColor="#FFFFFF"
                android:textSize="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/toshare"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/gooddetail_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="@string/detail_share"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:visibility="gone"/>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>