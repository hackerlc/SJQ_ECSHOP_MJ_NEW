<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_good_distance"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/push_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ecjia.widgets.XListView
                android:id="@+id/push_listview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:divider="#00000000"
                android:dividerHeight="0dp"
                android:listSelector="@drawable/selector_bg_notchange"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false" />
        </LinearLayout>

        <include
            android:id="@+id/null_pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@layout/null_msg"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
