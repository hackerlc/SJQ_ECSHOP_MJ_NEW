<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/root_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/login_bg_color"
              android:orientation="vertical">

    <include layout="@layout/layout_public_titlehead"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:layout_marginTop="@dimen/px100"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/_333333"
            android:layout_marginRight="@dimen/px15"
            android:textSize="@dimen/texte_size_18"/>

        <EditText
            android:id="@+id/get_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/login_username"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textSize="@dimen/texte_size_18"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginTop="@dimen/px15"
        android:layout_marginRight="@dimen/px30"
        android:background="@color/line_e7"/>

    <Button
        android:id="@+id/get_password_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_marginLeft="@dimen/px70"
        android:layout_marginRight="@dimen/px70"
        android:layout_marginTop="@dimen/px60"
        android:background="@drawable/shape_unable"
        android:enabled="false"
        android:minWidth="100dp"
        android:text="@string/register_next"
        android:textColor="@color/_999999"
        android:textSize="@dimen/title_textsize"/>

</LinearLayout>
