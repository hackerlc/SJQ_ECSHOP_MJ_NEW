<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/login_bg_color"
              android:orientation="vertical">

    <include layout="@layout/layout_public_titlehead"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px40"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:layout_marginTop="@dimen/px40"
        android:gravity="center_vertical"
        android:textSize="@dimen/texte_size_16"
        android:text="@string/register_set_pwd"
        android:textColor="@color/_999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px15"
            android:text="密码"
            android:textColor="@color/_333333"
            android:textSize="@dimen/texte_size_18"/>

        <EditText
            android:id="@+id/setpassword_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/register_enter_pwd"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/_333333"
            android:textColorHint="@color/_999999"
            android:textSize="@dimen/texte_size_18"/>

        <CheckBox
            android:id="@+id/setpassword_showpassword"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/login_checkbox_showpwd"
            android:button="@null"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px15"
        android:background="@color/line_e7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:layout_marginTop="@dimen/px18"
        android:gravity="center_vertical"
        android:text="@string/register_tips_pwd"
        android:textSize="@dimen/texte_size_16"
        android:textColor="@color/_999999"/>

    <Button
        android:id="@+id/setpassword_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_marginLeft="@dimen/px70"
        android:layout_marginRight="@dimen/px70"
        android:layout_marginTop="@dimen/px60"
        android:background="@drawable/shape_unable"
        android:enabled="false"
        android:minWidth="100dp"
        android:text="@string/register_regist"
        android:textColor="@color/_999999"
        android:textSize="@dimen/texte_size_18"/>


</LinearLayout>