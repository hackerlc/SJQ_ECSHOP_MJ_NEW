<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/new_goods_putaway_ll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selecter_raditem_press_withsto"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <com.ecjia.widgets.SelectableRoundedImageView
            android:cropToPadding="true"
            android:padding="0.6dp"
            android:id="@+id/new_goods_putaway_photo"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="3dp"
            android:src="@drawable/default_image"
            app:sriv_border_color="#ffffff"
            app:sriv_left_top_corner_radius="8dp"
            app:sriv_right_top_corner_radius="8dp"/>

        <TextView
            android:id="@+id/new_goods_putaway_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#555555"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/new_goods_putaway_price"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/my_red"
            />
    </LinearLayout>

    <View
        android:id="@+id/right_empty"
        android:layout_width="10dp"
        android:layout_height="match_parent"/>


</LinearLayout>