<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/ll_search_top"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/public_theme_color_normal_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/search_frame_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_search_edit_bg"
                    android:gravity="center_vertical"
                    android:hint="@string/search_input"
                    android:imeOptions="actionSearch"
                    android:paddingLeft="30dp"
                    android:paddingRight="10dp"
                    android:textColorHint="#aaaaaa"
                    android:singleLine="true"
                    android:textSize="13dp"
                    />

                <ImageView
                    android:id="@+id/search_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/searcher_new_search_icon" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_search_cancel"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_search_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/title_right_textsize"
                android:visibility="gone" />

        </LinearLayout>


    </FrameLayout>

</LinearLayout>