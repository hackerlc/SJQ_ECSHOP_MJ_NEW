<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/new_good_distance"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#000000"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searcher_new_header_bg"/>

        <ImageView
            android:id="@+id/integral_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/header_back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/integral_creditsexchange"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize"/>

        <TextView
            android:id="@+id/integral_submit"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/integral_submit"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_right_textsize"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_new_distance"
        android:background="@drawable/new_good_distance"/>

    <TextView
        android:id="@+id/integral_num"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="#000000"
        android:textSize="@dimen/list_item_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"/>

    <EditText
        android:id="@+id/integral_input"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/new_nothing_bg"
        android:gravity="center_vertical"
        android:hint=""
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColor="#666666"
        android:textSize="@dimen/list_item_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"/>

</LinearLayout>