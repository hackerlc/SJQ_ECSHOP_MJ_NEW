<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/new_nothing_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/trade_head_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/trade_head_waitpay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/list_item_title"
            android:text="@string/profile_obligation" />

        <TextView
            android:id="@+id/trade_head_waitship"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/list_item_title"
            android:text="@string/profile_readyforshipment" />

        <TextView
            android:id="@+id/trade_head_shiped"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/list_item_title"
            android:text="@string/profile_forthegoods" />

        <TextView
            android:id="@+id/trade_head_finished"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/list_item_title"
            android:text="@string/profile_await_comment" />
    </LinearLayout>

</LinearLayout>