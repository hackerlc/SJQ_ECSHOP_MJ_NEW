<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/new_good_distance"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#000000"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/searcher_new_header_bg"/>

        <ImageView
            android:id="@+id/invoice_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/header_back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/balance_bill"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_textsize"/>

        <Button
            android:id="@+id/invoice_save"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:text="@string/bill_save"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_right_textsize"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:text="@string/bill_title"
            android:textSize="@dimen/list_item_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line_long_dark"/>

        <EditText
            android:id="@+id/invoice_taitou"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/new_nothing_bg"
            android:gravity="center_vertical"
            android:hint="@string/bill_title"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:singleLine="true"
            android:textColorHint="#66999999"
            android:textSize="@dimen/list_item_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginBottom="1dp"
            android:background="@color/line_long_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/invoice_content"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:text="@string/invoice_content"
        android:textSize="15dp"/>

    <ListView
        android:id="@+id/invoice_list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:divider="#FFFFFFFF"
        android:dividerHeight="0dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@drawable/selecter_newitem_press"
        android:overScrollMode="never"
        android:visibility="visible">
    </ListView>

    <TextView
        android:id="@+id/invoice_type"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:text="@string/invoice_type"
        android:textSize="15dp"/>

    <ListView
        android:id="@+id/invoice_list2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:divider="#FFFFFFFF"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@drawable/selecter_newitem_press"
        android:visibility="visible">
    </ListView>

    <TextView
        android:id="@+id/invoice_clear"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_white_stroke_corner"
        android:gravity="center"
        android:text="@string/top_clean"
        android:textSize="15dp"/>


</LinearLayout>