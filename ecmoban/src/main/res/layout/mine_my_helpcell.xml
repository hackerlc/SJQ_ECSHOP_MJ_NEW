<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        >

        <View
            android:id="@+id/info_first_line"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line_long_dark"
            android:visibility="gone" />



        <LinearLayout
            android:id="@+id/shopinfo_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selecter_newitem_press"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_shopinfo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_minefragment_help"/>

            <TextView
                android:id="@+id/shopinfo_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="#050505"
                android:textSize="@dimen/list_item_title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/header_right_arrow" />
        </LinearLayout>

        <View
            android:id="@+id/info_middle_line_top"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="50dp"
            android:background="@color/line_long_dark"
            android:visibility="visible" />

        <View
            android:id="@+id/info_end_line"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/line_long_dark"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>