<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:id="@+id/middle_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line_long_dark"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toLeftOf="@+id/ll_my_reward_points"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_my_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#333333"
                android:textSize="@dimen/list_item_title" />

            <TextView
                android:id="@+id/tv_my_reward_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:textColor="#FF666666"
                android:textSize="@dimen/list_item_small" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/ll_my_reward_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_reward_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:textColor="@color/my_red"
            android:textSize="@dimen/list_item_title" />

        </FrameLayout>
    </RelativeLayout>

    <View
        android:id="@+id/end_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"
        android:visibility="gone" />

</LinearLayout>