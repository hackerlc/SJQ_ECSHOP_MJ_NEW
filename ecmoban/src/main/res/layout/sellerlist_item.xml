<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/shoplist_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_long_dark"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/seller_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"/>

        <ImageView
            android:id="@+id/seller_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seller_item_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxWidth="160dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="17dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/header_right_arrow"
                    android:tint="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/shoplist_uncollect"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_shopuncollect"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/shop_uncollect"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="@string/shop_uncollected"
                    android:textColor="@color/public_theme_color_normal"
                    android:textSize="13dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/seller_collect_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text=""
                    android:textSize="11dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/seller_desc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_seller_distance"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/white"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/shoplist_collected"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_shopcollect"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/shop_collected"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/shop_collected"
                android:textColor="@color/white"
                android:textSize="13dp"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goodimg_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DDDDDD"
            android:cropToPadding="true"
            android:padding="1px"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/goodimg_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DDDDDD"
            android:cropToPadding="true"
            android:padding="1px"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/goodimg_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DDDDDD"
            android:cropToPadding="true"
            android:padding="1px"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/goodimg_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DDDDDD"
            android:cropToPadding="true"
            android:padding="1px"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/goodimg_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DDDDDD"
            android:cropToPadding="true"
            android:padding="1px"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_long_dark"/>

    <View
        android:id="@+id/bottom_div"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/new_good_distance"
        android:visibility="gone"/>

</LinearLayout>