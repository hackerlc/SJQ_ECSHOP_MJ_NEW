<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/homefragment_mb_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selecter_raditem_press_withsto"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_mb"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:gravity="center">

            <com.ecjia.widgets.SelectableRoundedImageView
                android:id="@+id/homefragment_mb_img"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"
                android:cropToPadding="true"
                android:padding="0.6dp"
                app:sriv_border_color="#ffffff"
                app:sriv_left_top_corner_radius="8dp"
                app:sriv_right_top_corner_radius="8dp"/>

            <TextView
                android:visibility="gone"
                android:layout_gravity="bottom|center_vertical"
                android:id="@+id/homefragment_mb_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="10dp"
                android:gravity="center_vertical"
                android:background="#99999999"
                />
        </FrameLayout>

        <TextView
            android:maxLines="1"
            android:id="@+id/homefragment_mb_name"
            android:textColor="@color/my_dark"
            android:textSize="13dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:singleLine="true"
                android:id="@+id/homefragment_mb_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="110dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:textSize="15dp"
                android:textColor="#FFFF0000"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mobile_buy_icon"
                />

            <TextView
                android:id="@+id/homefragment_mb_marketprice"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>