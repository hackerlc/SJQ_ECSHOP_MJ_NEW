<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:iview="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.ecjia.entity.model.SimpleGoods"/>
    </data>
<LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:id="@+id/goodlist_top_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/goodlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/goodlist_img"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"/>
        <com.ecjia.widgets.AutoReturnView
            android:id="@+id/goodlist_goodname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/goodlist_img"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            iview:ar_color="#111111"
            iview:ar_content="@string/collect_goods_info"
            iview:ar_maxLines="2"
            iview:ar_size="15"/>
        <TextView
            android:id="@+id/tv_campaign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goodlist_img"
            android:layout_below="@id/goodlist_goodname"
            android:layout_marginTop="6dp"
            android:textColor="@color/my_red"
            tools:text="满减活动"/>
        <TextView
            android:id="@+id/goodlist_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goodlist_img"
            android:layout_below="@id/tv_campaign"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/my_red"
            android:textSize="20sp"
            android:text="@{data.showPrice()}"
            tools:text="2000"/>
        <TextView
            android:id="@+id/goodlist_promote_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goodlist_shop_price"
            android:layout_alignBottom="@id/goodlist_shop_price"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:text="@{data.market_price}"
            tools:text="$60.00-$20.00"/>

        <TextView
            android:id="@+id/tv_wholesale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goodlist_img"
            android:layout_below="@id/goodlist_shop_price"
            android:layout_marginBottom="5dp"
            android:textColor="@color/my_dark"
            android:textSize="15dp"
            tools:text="1件起批"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_toRightOf="@id/goodlist_img"
            android:layout_alignBottom="@id/goodlist_img"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:background="@drawable/item_business_btn_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/business_btn_text"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/goodlist_middel_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="110dp"
        android:background="@color/line_long_dark"
        android:visibility="gone"/>

    <View
        android:id="@+id/goodlist_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"/>

</LinearLayout>
</layout>