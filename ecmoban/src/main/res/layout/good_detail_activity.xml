<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_good_distance"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ecjia.widgets.MyGraygapView
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </com.ecjia.widgets.MyGraygapView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_nothing_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/good_brief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="false"
                    android:textColor="@color/my_black"
                    android:textSize="@dimen/list_item_title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/promote_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/my_red"
                        android:textSize="@dimen/list_item_title"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"/>

                        <TextView
                            android:id="@+id/market_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:textSize="@dimen/list_item_small"/>
                    </LinearLayout>
                </LinearLayout>

                <!--手机专享-->
                <LinearLayout
                    android:id="@+id/ll_mobile_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_mobile_buy"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/mobile_buy_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:gravity="center_vertical"
                            android:text="@string/mobile_buy"
                            android:textColor="@color/my_red"
                            android:textSize="12dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_mobile_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/my_red"
                        android:textSize="13dp"/>


                </LinearLayout>

                <!--促销商品的时间-->
                <LinearLayout
                    android:id="@+id/ll_promote_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/promote_time"/>

                    <TextView
                        android:id="@+id/count_down"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/my_dark"
                        android:textSize="@dimen/list_item_title"/>

                </LinearLayout>


                <!--
            <com.external.HorizontalVariableListView.widget.HorizontalVariableListView
                android:id="@+id/good_detail_photo_list"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:layout_below="@+id/text"
                android:gravity="bottom|center_vertical"
                android:paddingBottom="0dp"
                android:paddingTop="0dp" />
                -->

                <TextView
                    android:id="@+id/good_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:lineSpacingExtra="5dp"
                    android:visibility="gone"/>
            </LinearLayout>


            <com.ecjia.widgets.MyGraygapView
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </com.ecjia.widgets.MyGraygapView>

            <LinearLayout
                android:id="@+id/active_bigitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/active_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/shop_discount"
                        android:textColor="#FF666666"
                        android:textSize="17dp"/>

                    <LinearLayout
                        android:id="@+id/active_titles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <TextView
                        android:id="@+id/active_show"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:text="@string/shop_have_discount"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/show_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/search_showchild"/>
                </LinearLayout>

                <com.ecjia.widgets.MyListView
                    android:id="@+id/active_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/line_long_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_new_distance"
                    android:background="@drawable/new_good_distance"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/line_long_dark"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/good_category_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center"
                android:minHeight="50dp">

                <TextView
                    android:id="@+id/good_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textColor="#666666"
                    android:textSize="@dimen/list_item_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/header_right_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/line_long_dark"/>

            <LinearLayout
                android:id="@+id/good_city_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/shop_send"
                    android:textColor="#666666"
                    android:textSize="@dimen/list_item_title"/>

                <TextView
                    android:id="@+id/good_cityinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="#666666"
                    android:textSize="@dimen/list_item_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/header_right_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/line_long_dark"/>

            <LinearLayout
                android:id="@+id/good_service_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/new_nothing_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/shop_service"
                    android:textColor="#666666"
                    android:textSize="@dimen/list_item_title"/>

                <TextView
                    android:id="@+id/good_serviceinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#666666"
                    android:textSize="@dimen/list_item_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/header_right_arrow"
                    android:visibility="invisible"/>
            </LinearLayout>


            <com.ecjia.widgets.MyGraygapView
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </com.ecjia.widgets.MyGraygapView>

            <LinearLayout
                android:id="@+id/goods_comment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/gooddetail_commit"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/list_item_title"/>

                <TextView
                    android:id="@+id/gooddetail_commit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/list_item_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/header_right_arrow"/>
            </LinearLayout>

            <View
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/line_long_dark"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>