<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dreamcategory"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/tabOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/filter_title_tabone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/new_good"
                android:textColor="@color/TextColorBlack"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/filter_order_tabone"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1.5dp"
                android:src="@drawable/item_grid_filter_down_active_arrow"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/filter_triangle_tabone"
            android:layout_width="14dp"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:src="@drawable/item_grid_filter_sanjiao_icon" />

        <View
            android:id="@+id/filter_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#FF999999"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/filter_title_tabtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/popularity"
                android:textColor="@color/filter_text_color"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/filter_order_tabtwo"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1.5dp"
                android:src="@drawable/item_grid_filter_down_active_arrow"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/filter_triangle_tabtwo"
            android:layout_width="14dp"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:src="@drawable/item_grid_filter_sanjiao_icon" />

        <View
            android:id="@+id/filter_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#FF999999"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/filter_title_tabthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/price"
                android:textColor="@color/filter_text_color"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/filter_order_tabthree"
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"

                 />
        </LinearLayout>

        <ImageView
            android:id="@+id/filter_triangle_tabthree"
            android:layout_width="14dp"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/item_grid_filter_sanjiao_icon"
            android:visibility="gone" />

        <View
            android:id="@+id/filter_three"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#FF999999"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabfour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/filter_title_tabfour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/filter"
                android:textColor="@color/filter_text_color"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/filter_order_tabfour"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1.5dp"
                android:src="@drawable/item_grid_filter_down_active_arrow"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/filter_triangle_tabfour"
            android:layout_width="14dp"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:src="@drawable/item_grid_filter_sanjiao_icon" />

        <View
            android:id="@+id/filter_four"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#FF999999"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>