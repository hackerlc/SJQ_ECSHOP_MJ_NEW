<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_filter_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shoplist_filter_height"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_filter_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/new_good"
                android:textColor="@color/public_theme_color_normal"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            android:id="@+id/filter_one"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/public_theme_color_normal"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/tv_filter_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/popularity"
                android:textColor="@color/filter_text_color"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            android:id="@+id/filter_two"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/public_theme_color_normal"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/tv_filter_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/price_down"
                android:textColor="@color/filter_text_color"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            android:id="@+id/filter_three"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/public_theme_color_normal"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter_four"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/tv_filter_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:clickable="false"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/price_up"
                android:textColor="@color/filter_text_color"
                android:textSize="14dp" />


                />
        </LinearLayout>

        <View
            android:id="@+id/filter_four"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/public_theme_color_normal"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>