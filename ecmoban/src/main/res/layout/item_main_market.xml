<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.ecjia.entity.model.Market"/>
        <variable
            name="shop1"
            type="com.ecjia.entity.model.ShopInfo"/>
        <variable
            name="shop2"
            type="com.ecjia.entity.model.ShopInfo"/>
    </data>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@{data.image}"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_img"
            android:padding="2dp"
            android:background="@color/main_color_5a000000">
            <!--<TextView-->
                <!--android:id="@+id/tv_num"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:textColor="@color/new_good_distance"-->
                <!--android:maxLines="1"-->
                <!--android:ellipsize="end"-->
                <!--android:text=""-->
                <!--tools:text="入驻商家：30000"/>-->
            <!--@{data.showShopNum}-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:text="@{data.name}"
                tools:text="四季青市场"/>
        </RelativeLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_img"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/main_color_e7e7e7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_item_new_market_img_div"
            android:layout_below="@id/v_line">
            <RelativeLayout
                android:id="@+id/rl_div_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_shop_img_1"
                    android:layout_width="@dimen/main_item_new_market_img_div"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@{shop1.shop_logo}"/>
                <TextView
                    android:id="@+id/tv_title_1"
                    style="@style/MainItemNewMarketDivStrName"
                    android:layout_toRightOf="@id/iv_shop_img_1"
                    android:text="@{shop1.shop_name}"
                    tools:text="名称名称名称"/>
                <TextView
                    android:id="@+id/tv_dec_1"
                    style="@style/MainItemNewMarketDivStrDec"
                    android:layout_toRightOf="@id/iv_shop_img_1"
                    android:layout_alignBottom="@id/iv_shop_img_1"
                    android:text="@{shop1.shop_desc}"
                    tools:text="简介"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_div_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_shop_img_2"
                    android:layout_width="@dimen/main_item_new_market_img_div"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@{shop2.shop_logo}"/>
                <TextView
                    android:id="@+id/tv_title_2"
                    style="@style/MainItemNewMarketDivStrName"
                    android:layout_toRightOf="@id/iv_shop_img_2"
                    android:text="@{shop2.shop_name}"
                    tools:text="名称名称名称"/>
                <TextView
                    android:id="@+id/tv_dec_2"
                    style="@style/MainItemNewMarketDivStrDec"
                    android:layout_toRightOf="@id/iv_shop_img_2"
                    android:layout_alignBottom="@id/iv_shop_img_2"
                    android:text="@{shop2.shop_desc}"
                    tools:text="简介"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</layout>