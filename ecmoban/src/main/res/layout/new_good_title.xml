<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_goodtitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/new_have_goods"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/index_hot_icon"
                android:gravity="center"
                android:text="@string/hotselling_recommend"
                android:textColor="#ffffff"
                android:textSize="13dp" 
                android:visibility="gone"/>


            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/banner_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="@string/goods_sale"
                android:textSize="@dimen/list_item_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="@string/goods_earth_min"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>