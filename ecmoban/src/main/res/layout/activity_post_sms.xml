<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/root_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/login_bg_color"
              android:orientation="vertical">

    <include layout="@layout/layout_public_titlehead"/>

    <TextView
        android:id="@+id/tv_phone_hinit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px70"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:layout_marginTop="@dimen/px40"
        android:textSize="@dimen/texte_size_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px60"
        android:layout_marginLeft="@dimen/layout_marginLR"
        android:layout_marginRight="@dimen/layout_marginLR"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px50"
            android:layout_marginRight="@dimen/px15"
            android:text="验证码"
            android:textColor="@color/_333333"
            android:textSize="@dimen/texte_size_18"/>

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/px50"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/register_enter_code"
            android:maxLength="11"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/_333333"
            android:textColorHint="@color/_999999"
            android:textSize="@dimen/texte_size_18"/>

        <TextView
            android:id="@+id/messagecodecheck_time"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px50"
            android:layout_marginLeft="@dimen/layout_marginLR"
            android:background="@drawable/selector_get_code"
            android:gravity="center"
            android:text="@string/change_send"
            android:textColor="@color/white"
            android:textSize="@dimen/texte_size_12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px250"
        android:layout_marginTop="@dimen/px15"
        android:background="@color/line_e7"/>

    <Button
        android:id="@+id/get_password_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80"
        android:layout_marginLeft="@dimen/px70"
        android:layout_marginRight="@dimen/px70"
        android:layout_marginTop="@dimen/px60"
        android:background="@drawable/shape_unable"
        android:enabled="false"
        android:minWidth="100dp"
        android:text="@string/register_next"
        android:textColor="@color/_999999"
        android:textSize="@dimen/texte_size_18"/>

</LinearLayout>
