<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id="@+id/find_hot_small_topline"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#FFCCCCCC"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/hot_small_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ecjia.widgets.AutoReturnView
            android:id="@+id/find_small_hot_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="47dp"
            android:layout_gravity="center_vertical"
            iview:ar_maxLines="2"
            iview:ar_size="17"
            android:layout_marginLeft="15dp"
            iview:ar_color="#dd222222" />
        <ImageView
            android:id="@+id/find_hot_news_img"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/default_image"
            android:scaleType="centerCrop"
            android:layout_margin="10dp" />
    </LinearLayout>

    <View
        android:id="@+id/find_hot_small_buttomline"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#FFCCCCCC"
        android:visibility="gone"/>
</LinearLayout>