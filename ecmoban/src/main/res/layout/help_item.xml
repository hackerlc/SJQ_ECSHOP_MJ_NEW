<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="#ffffff"
              android:orientation="vertical">

    <View
        android:id="@+id/help_first_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"
        android:visibility="gone"/>

    <View
        android:id="@+id/help_middle_line_top"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_long_dark"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/profile_new_userhelp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/help_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FF666666"
            android:textSize="@dimen/list_item_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/header_right_arrow"/>
    </LinearLayout>

    <View
        android:id="@+id/help_middle_line_buttom"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_long_dark"
        android:visibility="gone"/>

    <View
        android:id="@+id/help_end_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark"
        android:visibility="gone"/>

</LinearLayout>