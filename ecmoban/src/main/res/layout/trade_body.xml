<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <View
        android:id="@+id/trade_item_top"
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:background="#FFCCCCCC"/>

    <LinearLayout
        android:id="@+id/order_item"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/selecter_newitem_press"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/trade_body_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/my_dark"
                android:textSize="@dimen/list_item_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trade_body_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_red"
                    android:textSize="@dimen/list_item_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/goods_and_total"
                    android:textSize="@dimen/list_item_small"/>

                <TextView
                    android:id="@+id/trade_body_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_red"
                    android:textSize="@dimen/list_item_small"/>

                <TextView
                    android:id="@+id/tv_tuanpi_dinjin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="@dimen/px5"
                    android:paddingRight="@dimen/px5"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_specification_selected"
                    android:text="定金"
                    android:visibility="gone"
                    android:textColor="@color/TextColorWhite"
                    android:textSize="10sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/list_item_small"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="@dimen/list_item_small"
                />

            <TextView
                android:id="@+id/trade_body_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="10dp"
                android:textColor="#a3a3a3"
                android:textSize="@dimen/list_item_small"/>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/trade_item_buttom"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#FFCCCCCC"/>

</LinearLayout>