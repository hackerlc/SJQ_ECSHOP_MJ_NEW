<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ecjia.widgets.ECJiaTopView
        android:id="@+id/addredpaper_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_paper_top_bg" />

        <EditText
            android:id="@+id/add_red_paper_input"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/shape_redpaper_input"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="@color/line_long_dark"
            android:hint="@string/add_paper_hint"
            android:layout_gravity="center_vertical"
            android:inputType="number"
            android:lines="1"
            android:textSize="@dimen/list_item_title"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/add_redpaper_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_login_button"
            android:minWidth="100dp"
            android:text="@string/mypurse_add_text"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_textsize" />

        <View
            android:id="@+id/buttom_view"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            />
    </LinearLayout>
</LinearLayout>
