<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_goods_img"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/iv_goods_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="18sp"
        tools:text="namenamenamenamenamenamenamenamenamenamename"/>

    <ProgressBar
        android:id="@+id/pb_num"
        style="@style/SnatchWholesaleProgressBar"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_below="@id/tv_goods_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_goods_img"
        android:max="100"
        android:progress="20"/>

    <TextView
        android:id="@+id/tv_remaining_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_goods_name"
        android:textColor="@color/main_font_color_bdbdbd"
        android:textSize="12sp"
        tools:text="仅剩20件"/>

    <TextView
        android:id="@+id/tv_show_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_remaining_num"
        android:layout_toRightOf="@+id/iv_goods_img"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/title_bg_color"
        tools:text="$200"/>

    <TextView
        android:id="@+id/tv_tag_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_goods_img"
        android:layout_below="@id/tv_show_price"
        android:textColor="@color/main_font_color_bdbdbd"
        tools:text="$300"/>

    <Button
        android:id="@+id/btn_enter"
        style="@style/SnatchWholesaleBtn1"
        android:clickable="false"/>
    <Button
        android:id="@+id/btn_enter2"
        style="@style/SnatchWholesaleBtn2"
        android:clickable="false"
        android:visibility="gone"/>
</RelativeLayout>