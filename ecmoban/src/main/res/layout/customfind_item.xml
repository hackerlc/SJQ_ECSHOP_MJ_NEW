<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <View
        android:id="@+id/find_top_long_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#FFCCCCCC"
        android:visibility="gone"/>
    <View
        android:id="@+id/find_top_short_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="50dp"
        android:background="#FFCCCCCC"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/myfind_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myfind_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/myfind_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FF666666"
            android:textSize="@dimen/list_item_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/header_right_arrow"
            android:layout_marginRight="15dp"
            android:visibility="visible" />
    </LinearLayout>
    <View
        android:id="@+id/find_buttom_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#FFCCCCCC"
        android:visibility="gone"/>
</LinearLayout>