<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/banner_layout_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ecjia.widgets.banner.BannerView
            android:id="@+id/home_banner"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:indicator_drawable_selected="@drawable/point_normal_bg"
            app:indicator_drawable_unselected="@drawable/home_point_press_bg"
            app:indicator_margin="5dp"
            app:indicator_radius="7dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/bg_main"
        android:scaleType="fitXY"/>
</LinearLayout>


