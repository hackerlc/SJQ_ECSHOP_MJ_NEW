<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_nothing_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/payment_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@drawable/selecter_newitem_press"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/payment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/payment_unselected" />

        <TextView
            android:id="@+id/payment_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="#FF333333"
            android:textSize="@dimen/list_item_title" />

        <TextView
            android:id="@+id/payment_item_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#FF333333"
            android:textSize="@dimen/list_item_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_long_dark" />

</LinearLayout>