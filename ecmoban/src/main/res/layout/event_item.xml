<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/event_title_item"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <View
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line_long_dark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/event_all_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="16dp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_image_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_raditem_press_withsto"
                android:orientation="vertical">

                <com.ecjia.widgets.SelectableRoundedImageView
                    android:id="@+id/iv_event"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0.6dp"
                    android:scaleType="centerCrop"
                    app:sriv_border_color="#ffffff"
                    app:sriv_left_bottom_corner_radius="8dp"
                    app:sriv_left_top_corner_radius="8dp"
                    app:sriv_right_bottom_corner_radius="8dp"
                    app:sriv_right_top_corner_radius="8dp"
                    />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/first_item"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <LinearLayout
            android:id="@+id/item_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="0dp">

            <LinearLayout
                android:id="@+id/ll_event2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selecter_raditem_press_withsto"
                    android:orientation="vertical">

                    <com.ecjia.widgets.SelectableRoundedImageView
                        android:id="@+id/iv_event2"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_image"
                        app:sriv_border_color="#ffffff"
                        app:sriv_left_bottom_corner_radius="8dp"
                        app:sriv_left_top_corner_radius="8dp"
                        app:sriv_right_bottom_corner_radius="8dp"
                        app:sriv_right_top_corner_radius="8dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selecter_raditem_press_withsto"
                    android:orientation="vertical">

                    <com.ecjia.widgets.SelectableRoundedImageView
                        android:id="@+id/iv_event3"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_image"
                        app:sriv_border_color="#ffffff"
                        app:sriv_left_bottom_corner_radius="8dp"
                        app:sriv_left_top_corner_radius="8dp"
                        app:sriv_right_bottom_corner_radius="8dp"
                        app:sriv_right_top_corner_radius="8dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selecter_raditem_press_withsto"
                    android:orientation="vertical">

                    <com.ecjia.widgets.SelectableRoundedImageView
                        android:id="@+id/iv_event4"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="0.6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_image"
                        app:sriv_border_color="#ffffff"
                        app:sriv_left_bottom_corner_radius="8dp"
                        app:sriv_left_top_corner_radius="8dp"
                        app:sriv_right_bottom_corner_radius="8dp"
                        app:sriv_right_top_corner_radius="8dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>