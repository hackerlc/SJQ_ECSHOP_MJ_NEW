<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/shopgoods_item_top"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_long_dark"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/shopgoods_item"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/selecter_newitem_press"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/shopgoods_body_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/shopgoods_body_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/my_black"
                    android:textSize="@dimen/list_item_mid"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/shopgoods_body_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/my_red"
                    android:textSize="@dimen/list_item_mid"/>

                <TextView
                    android:id="@+id/shopgoods_body_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/my_dark"
                    android:textSize="@dimen/list_item_mid"/>
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/shopgoods_item_buttom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_long_dark"/>
    </LinearLayout>

</LinearLayout>